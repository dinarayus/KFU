#include <iostream>
#include <fstream>
using namespace std;
int main() {
	string filename = "replace.txt";
	// Открытие файла для чтения
	ifstream fin(filename);
	if (!fin) {
		cerr << "Ошибка открытия файла." << endl;
		return 1;
	}
	int numbers;
i	int* numbers = new int[N];
    	for (int i = 0; i < N; i++) {
        	fin >> numbers[i];
   	 }
     	int min = numbers[0];
      	int max = numbers[0];
      	int index_min = 0;
       	int index_max = 0; 
	for(int i = 0; i < N; i++ ){
 		if(numbers[i] <= min){
   			min = numbers[i]
      			index_min = i;
	 		}
   	 }
     	for(int i = 0; i < N; i++ ){
 		if(numbers[i] >= max){
   			max = numbers[i]
      			index_max = i;
	 		}
   	 }
     	numbers[index_max] = min;
      	numbers[index_min] = max;
	
	// Открытие файла для записи
	ofstream fout(filename);
	if (!fout) {
		cerr << "Ошибка открытия файла." << endl;
		return 1;
	}
	// Запись измененных чисел обратно в файл
	for (int i = 0; i < N; i++) {
		fout << numbers[i] << " ";
	}
 	fin.close()
	fout.close();
}
