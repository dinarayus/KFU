#include <iostream>
#include <fstream>
#include <string>
using namespace std;
int main() {
	ifstream fin("text.txt");
	ofstream fout("right.txt");
	if (!fin.is_open()) {
		cerr << "Input file is not open" << endl;
		return 1;
	}
	string line;
	int count_lines = 0;
	while (!fin.eof()) {
		getline(fin, line);
		count_lines++;
	}
	cout << "Count lines: " << count_lines << endl;
	fin.clear();
	fin.seekg(0, ios::beg);
	int i = 0;
	while (!fin.eof()) {
		getline(fin, line);
		i++;
		size_t p = 0;
		while (p < line.size() && line[p] == ' ')
			p++;
		fout << line.substr(p);
		if (i < count_lines)
			fout << endl;
	}
	fin.close();
	fout.close();
	return 0;
}
